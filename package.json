{
  "name": "clean-code",
  "version": "1.0.0",
  "description": "examples of book clean code",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "dev:lsp": "ts-node-dev --respawn --transpile-only ./src/lsp/index.ts",
    "tslint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"./src/**/*.{ts}\"",
    "prettier:write": "npm run prettier:base -- --write \"./src/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "Carlos Enrique Ram√≠rez Flores",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/supertest": "^2.0.10",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
